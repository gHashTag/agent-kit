{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals", "node", "dotenv"] // Added vitest/globals, node and dotenv for better type support
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}